{
  "name": "xlkit",
  "version": "1.3.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "biome check",
    "format": "biome check --write"
  },
  "keywords": [
    "excel",
    "exceljs",
    "spreadsheet",
    "wrapper",
    "declarative",
    "schema"
  ],
  "author": "",
  "license": "MIT",
  "description": "xlkit - Declarative schema-based wrapper for ExcelJS with type safety and intuitive styling",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yn1323/xlkit.git"
  },
  "bugs": {
    "url": "https://github.com/yn1323/xlkit/issues"
  },
  "homepage": "https://github.com/yn1323/xlkit#readme",
  "dependencies": {
    "exceljs": "^4.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^24.10.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vitest": "^4.0.12"
  }
}
